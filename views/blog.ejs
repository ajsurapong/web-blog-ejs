<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/script_style.ejs')  %> 
</head>
<body>
    <!-- Navbar -->
    <%- include('./partials/navbar.ejs')  %> 
    
    <!-- Main content -->
    <div class="container">
        <div class="text-end my-3">
            <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalAddEdit">Add</button>
        </div>
        <% post.forEach(blog => { %>
            <div class="card mb-3">
                <div class="card-header">
                    <h2><%= blog.title %></h2>
                </div>
                <div class="card-body"><%= blog.detail %> </div>
                <div class="card-footer text-end">
                    <button class="btn btn-warning">Edit</button>
                    <button class="btn btn-danger">Delete</button>
                </div>
            </div>
        <% }) %>
    </div>
    
    <!-- Modal for add and edit -->
    <div class="modal fade" id="modalAddEdit">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Title
                    <input type="text" name="title" class="form-control">
                    Detail
                    <textarea name="detail" rows="5" class="form-control"></textarea>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <%- include('./partials/footer.ejs')  %>
        
    <script src="/public_blog/scripts/blog.js"></script>  
</body>
</html>